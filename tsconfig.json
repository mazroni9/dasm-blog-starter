{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["*"] },
    "moduleResolution": "bundler",
    "module": "esnext",
    "jsx": "preserve",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
